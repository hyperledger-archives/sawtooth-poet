top_dir=$(cd $(dirname $(dirname $0)) && pwd)

dirs="
    $top_dir/src/core
    $top_dir/src/ias_client
    $top_dir/src/ias_proxy
    $top_dir/src/sgx/rust_sgxffi
    $top_dir/src/validator-registry-tp
"

exitcode=0

for dir in $dirs; do
    cd $dir
    echo "$dir"

    cargo clippy
    exitcode=$?

    # cargo clippy returns non-zero error code if there are errors.

    if [[ $exitcode != 0 ]]; then
      echo "Clippy errors found: $dir (error code: $exitcode)"
      break
    fi

done

exit $exitcode
